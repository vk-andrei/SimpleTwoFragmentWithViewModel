<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79FF40"
    tools:context=".FragmentTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_frag_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="MESSAGE:" />

        <Button
            android:id="@+id/btn_sent_to_Frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send message to F1" />

        <Button
            android:id="@+id/btn_sent_to_Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send message to Activity" />
    </LinearLayout>

</FrameLayout>